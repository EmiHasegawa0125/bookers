
<h2>Editing book</h2>

<% flash.each do |key, value| %>
  <%= content_tag(:p, value, class: "alert alert-#{key}") %>
<% end %>


<%= form_with model:@book, local: true do |f| %>

<div class="field">
  <label>Title</label>
  <%= f.text_field :title %>
</div>

<div class="field">
  <label>Body</label>
  <%= f.text_area :body %>
</div>

<div class="action">
<%= f.submit "Update Book" %>
</div>

<% end %>

<%= link_to "Show", book_path(@book) %>
<span class="partition">|</span>
<%= link_to "Back", books_path %>